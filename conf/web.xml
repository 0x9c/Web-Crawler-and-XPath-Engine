<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

 <web-app>
   <display-name>Channel Subscription Servlets</display-name>
   <context-param>
     <param-name>BDBstore</param-name>
     <param-value>./DBStoreDir</param-value>
   </context-param>
    
   <servlet>
     <servlet-name>xpath</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.XPathServlet</servlet-class> 
   </servlet>
      
   <servlet>
     <servlet-name>xcrawlerlogin</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.XCrawlerLogin</servlet-class> 
   </servlet>
   
   <servlet>
     <servlet-name>xcrawlerauthenticate</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.XCrawlerAuthenticate</servlet-class> 
   </servlet>
   
   <servlet>
     <servlet-name>xcrawlernewaccount</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.XCrawlerNewAccount</servlet-class> 
   </servlet>
   
   <servlet>
     <servlet-name>xcrawlerinvalidlogin</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.XCrawlerInvalidLogin</servlet-class> 
   </servlet>
   
   <servlet>
     <servlet-name>xcrawlercreateaccount</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.XCrawlerCreateAccount</servlet-class>
   </servlet>
   
   <servlet>
     <servlet-name>xcrawleraccountexists</servlet-name>
     <servlet-class>edu.upenn.cis455.servlet.XCrawlerAccountExists</servlet-class>
   </servlet>
   
   <servlet-mapping>
     <servlet-name>xpath</servlet-name>
     <url-pattern>/xpath</url-pattern>
   </servlet-mapping>  
   
   <servlet-mapping>
     <servlet-name>xcrawlerlogin</servlet-name>
     <url-pattern>/login</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>xcrawlerauthenticate</servlet-name>
     <url-pattern>/authenticate</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>xcrawlerinvalidlogin</servlet-name>
     <url-pattern>/invalid</url-pattern>
   </servlet-mapping> 
   
   <servlet-mapping>
     <servlet-name>xcrawlernewaccount</servlet-name>
     <url-pattern>/newaccount</url-pattern>
   </servlet-mapping>

	<servlet-mapping>
     <servlet-name>xcrawlercreateaccount</servlet-name>
     <url-pattern>/createaccount</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
     <servlet-name>xcrawleraccountexists</servlet-name>
     <url-pattern>/accountexists</url-pattern>
   </servlet-mapping>
   
   <!-- add any additional servlets and servlet mappings here -->

</web-app>
